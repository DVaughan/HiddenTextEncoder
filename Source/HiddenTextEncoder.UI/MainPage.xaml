<Page
	x:Class="HiddenTextEncoder.UI.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:HiddenTextEncoder.UI"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel>
			<TextBlock Text="Text" />
			<TextBox Text="{Binding PlainText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					TextWrapping="Wrap"
					AcceptsReturn="True"
					Height="200"/>
			<TextBlock Text="Key" />
			<TextBox Text="{x:Bind ViewModel.Key, Mode=TwoWay}" />
			<TextBlock Text="Encoded Text" />
			<TextBox x:Name="encodedTextBox" Text="{Binding EncodedText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
					SelectionHighlightColor="#FF0078D7" 
					TextWrapping="Wrap"
					AcceptsReturn="True"
					Height="200"/>
			<CheckBox IsChecked="{x:Bind ViewModel.UseEncryption, Mode=TwoWay}" Content="Encrypt" />
			<Button Content="Copy to Clipboard" Command="{x:Bind ViewModel.CopyToClipboardCommand}" />
		</StackPanel>
	</Grid>
</Page>
